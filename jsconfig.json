{
  "compilerOptions": {
    "target": "es2018",
    "baseUrl": ".",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@config/*": ["src/config/*"],
      "@sass/*": ["src/assets/sass/*"],
      "@utils/*": ["src/assets/utils/*"],
      "@components/*": ["src/components/*"],
      "@context/*": ["src/context/*"],
      "@api/*": ["src/pages/api/*"],
      "@static/*": ["src/static/*"]
    }
  },
  "include": ["config", "src"],
  "exclude": ["node_modules", "dist", "src/.next", "src/build", "src/out"]
}
