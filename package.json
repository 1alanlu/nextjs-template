{
  "name": "nextjs-template",
  "version": "1.0.0",
  "description": "NextJs Template, ESlint + StyleLint + Prettier",
  "author": "Zyl",
  "license": "MIT",
  "scripts": {
    "lint:js": "cross-env NODE_ENV=development ./node_modules/.bin/eslint .",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:scss": "stylelint src/**/*.scss --syntax scss",
    "lint:scss:fix": "yarn lint:scss --fix",
    "dev": "next src",
    "build": "next build src",
    "export": "next export src",
    "start": "next start src",
    "start:port": "next start src -p %PORT%",
    "start:8000": "cross-env PORT=8000 yarn start:port",
    "start:9000": "cross-env PORT=9000 yarn start:port",
    "start:out": "http-server src/out -p 8080 --cors -o",
    "server:dev": "cross-env NODE_ENV=development node server/index.js",
    "server:prod": "cross-env NODE_ENV=production node server/index.js",
    "precommit": "lint-staged",
    "qq": "yarn build && yarn export",
    "deploy:setup": "git branch gh-pages",
    "deploy:check": "git checkout --orphan gh-pages && git reset --hard && git commit --allow-empty -m \"Init\" & git checkout master",
    "deploy:pre": "rimraf src/out && git worktree add src/out gh-pages",
    "deploy": "cd src/out && git add --all && git commit -m \"Deploy Next.js to gh-pages\" && git push origin gh-pages && cd ../.."
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,md}": [
      "yarn lint:js:fix",
      "prettier --write",
      "git add"
    ],
    "src/**/*.scss": [
      "yarn lint:scss:fix",
      "git add"
    ]
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-sass": "^1.0.1",
    "aos": "^3.0.0-beta.6",
    "autoprefixer": "^9.6.1",
    "classnames": "^2.2.6",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "file-loader": "^4.1.0",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-optipng": "^7.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "img-loader": "^3.0.1",
    "isomorphic-unfetch": "^3.0.0",
    "lqip-loader": "^2.2.0",
    "next": "^9.0.2",
    "next-compose-plugins": "^2.2.0",
    "next-fonts": "^0.17.0",
    "next-optimized-images": "^2.5.3",
    "next-seo": "^2.0.0",
    "node-sass": "^4.12.0",
    "nprogress": "^0.2.0",
    "path": "^0.12.7",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-icons": "^3.7.0",
    "react-images": "^1.0.0",
    "react-ink": "^6.4.0",
    "react-lazy-progressive-image": "^1.4.0",
    "react-stack-grid": "^0.7.1",
    "react-visibility-sensor": "^5.1.0",
    "responsive-loader": "^1.2.0",
    "styled-components": "^4.3.2",
    "svg-sprite-loader": "^4.1.6",
    "url-loader": "^2.1.0",
    "webp-loader": "^0.5.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "babel-plugin-styled-components": "^1.10.6",
    "cross-env": "^5.2.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-sass-guidelines": "^6.0.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.1",
    "stylelint-scss": "^3.9.2"
  }
}
