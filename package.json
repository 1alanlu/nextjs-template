{
  "name": "nextjs-template",
  "scripts": {
    "lint:js": "cross-env NODE_ENV=development ./node_modules/.bin/eslint .",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:scss": "stylelint src/**/*.scss --syntax scss",
    "lint:scss:fix": "yarn lint:scss --fix",
    "dev": "next src",
    "build": "next build src",
    "export": "next export src",
    "start": "next start src",
    "start:port": "next start src -p %PORT%",
    "start:out": "http-server src/out -p 8080 --cors -o",
    "s1": "cross-env PORT=8000 yarn start:port",
    "s2": "cross-env PORT=9000 yarn start:port",
    "server:dev": "cross-env NODE_ENV=development PORT=8888 node server/index.js",
    "server:prod": "cross-env NODE_ENV=production PORT=9999 node server/index.js",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,md}": [
      "yarn lint:js:fix",
      "prettier --write",
      "git add"
    ],
    "src/**/*.scss": [
      "yarn lint:scss:fix",
      "git add"
    ]
  },
  "dependencies": {
    "dotenv": "^8.0.0",
    "dotenv-webpack": "^1.7.0",
    "express": "^4.17.1",
    "isomorphic-unfetch": "^3.0.0",
    "next": "^9.0.1",
    "path": "^0.12.7",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-markdown": "^4.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "babel-plugin-styled-components": "^1.10.6",
    "cross-env": "^5.2.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-sass-guidelines": "^6.0.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.1",
    "stylelint-scss": "^3.9.1"
  },
  "jest": {
    "moduleNameMapper": {
      "^@components(.*)$": "<rootDir>/src/components$1",
      "^@context(.*)$": "<rootDir>/src/context$1",
      "^@static(.*)$": "<rootDir>/src/static$1",
      "^@utils(.*)$": "<rootDir>/src/assets/utils$1",
      "^@sass(.*)$": "<rootDir>/src/assets/sass$1"
    }
  }
}
